bot = Bot(token=TOKEN)
dp = Dispatcher(bot)

# –°–æ–∑–¥–∞–µ–º –∫–ª–∞–≤–∏–∞—Ç—É—Ä—É
keyboard = ReplyKeyboardMarkup(resize_keyboard=True)
button1 = KeyboardButton("üì© –û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑")
button2 = KeyboardButton("‚ÑπÔ∏è –í–æ–ø—Ä–æ—Å—ã")
keyboard.add(button1, button2)

@dp.message_handler(commands=["start"])
async def start(message: types.Message):
      await message.answer("–ü—Ä–∏–≤–µ—Ç !
–í—ã–±–µ—Ä–∏—Ç–µ –¥–µ–π—Å—Ç–≤–∏–µ:", reply_markup=keyboard)

@dp.message_handler(lambda message: message.text == "üì© –û—Ñ–æ—Ä–º–∏—Ç—å –∑–∞–∫–∞–∑")
async def order(message: types.Message):
    await message.answer("–í–≤–µ–¥–∏—Ç–µ –≤–∞—à –∑–∞–∫–∞–∑:")

@dp.message_handler()
async def receive_order(message: types.Message):
    owner_id = 5096594051
    await bot.send_message(owner_id, f"üì© –ù–æ–≤—ã–π –∑–∞–∫–∞–∑:\n{message.text}")
    await message.answer("‚úÖ –í–∞—à –∑–∞–∫–∞–∑ –ø—Ä–∏–Ω—è—Ç!")

